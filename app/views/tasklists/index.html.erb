<% if logged_in? %>

<h1>タスク一覧</h1>

<% if @tasklists.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>タスク</th>
      </tr>
    </thead>
    <tbody>
      <% @tasklists.each do |tasklist| %>
        <tr>
          <td><%= link_to tasklist.id, tasklist %></td>
          <td><%= tasklist.title %></td>
          <td><%= tasklist.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @tasklists %>
  </div>
 <% end %>
 
<%=link_to '新規タスクの追加', new_tasklist_path, class: "btn btn-primary" %>

<% else %>
<div class="center jumbotron">
  <div class="text-center">
    <h1>Task for God.</h1>
    <p class="lead">ええ〜〜<br>タスク管理しちゃうの〜〜〜？？？</p>
    <%= link_to '甘んじてタスク管理する' , signup_path, class: 'btn btn-lg btn-primary' %>
  </div>
</div>
<% end %>